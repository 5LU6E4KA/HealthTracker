<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowAuthentificationStyle" TargetType="Window">
        <Setter Property="Title" Value="AuthentificationWindow" />
        <Setter Property="Width" Value="800" />
        <Setter Property="Height" Value="550" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowStyle" Value="None" />

    </Style>

    <Style x:Key="WindowMenuStyle" TargetType="Window">
        <Setter Property="Width" Value="1100" />
        <Setter Property="Height" Value="720" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="False" />
        <Setter Property="Background" Value="{DynamicResource TransparentBackgroundColor}" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowState" Value="Normal" />
    </Style>

</ResourceDictionary>