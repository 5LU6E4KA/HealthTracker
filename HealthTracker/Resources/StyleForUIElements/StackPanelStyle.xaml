<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StackPanelLogoTextStyle" TargetType="StackPanel">
        <Setter Property="Width" Value="375" />
        <Setter Property="Margin" Value="0,40,0,0" />
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <Style x:Key="StackPanelAuthentificationElementsStyle" TargetType="StackPanel">
        <Setter Property="Width" Value="375" />
        <Setter Property="Margin" Value="0,20,0,0" />
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <Style x:Key="StackPanelActionSelectionStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>
</ResourceDictionary>