<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PathSunStyle" TargetType="Path">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Data" Value="{DynamicResource sun}" />
        <Setter Property="Fill" Value="{DynamicResource PercentPlusColor}" />
        <Setter Property="Stretch" Value="UniformToFill" />
    </Style>

    <Style x:Key="PathMoonStyle" TargetType="Path">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Data" Value="{DynamicResource moon}" />
        <Setter Property="Fill" Value="{DynamicResource PrimaryWhiteColor}" />
        <Setter Property="Stretch" Value="Fill" />
    </Style>

</ResourceDictionary>