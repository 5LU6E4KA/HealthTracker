<Page
    x:Class="HealthTracker.Pages.VitalSignsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthTracker.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="VitalSignsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <Border Style="{DynamicResource CornerPagesBorder}" />

            <StackPanel Margin="10" Orientation="Vertical">

                <Expander Header="Пульс" Style="{StaticResource RecomendationExpander}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <ListView
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,20" />

                        <DockPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,70,0"
                            HorizontalAlignment="Stretch">
                            <Label Content="Пульс" />
                            <TextBox MinWidth="160" MaxWidth="5000" />
                        </DockPanel>


                        <Button
                            Grid.Row="5"
                            Grid.ColumnSpan="2"
                            Width="100"
                            Height="40"
                            HorizontalAlignment="Center" />

                        <ListView
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            Margin="0,20,0,10" />


                    </Grid>
                </Expander>

                <Expander Header="Артериальное давление" Style="{StaticResource RecomendationExpander}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <ListView
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,20" />

                        <DockPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,70,0"
                            HorizontalAlignment="Stretch">
                            <Label Content="Тип жидкости" />
                            <TextBox MinWidth="160" MaxWidth="5000" />
                        </DockPanel>

                        <DockPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,30,20"
                            HorizontalAlignment="Stretch">
                            <Label Content="Уровень жидкости" />
                            <TextBox MinWidth="180" />
                        </DockPanel>


                        <Button
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Width="100"
                            Height="40"
                            HorizontalAlignment="Center" />

                        <ListView
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="0,20,0,10" />


                    </Grid>
                </Expander>

                <Expander Header="Температура тела" Style="{StaticResource RecomendationExpander}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />

                        </Grid.RowDefinitions>

                        <ListView
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,20" />

                        <DockPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,70,0"
                            HorizontalAlignment="Stretch">
                            <Label Content="Температура тела" />
                            <TextBox MinWidth="160" MaxWidth="5000" />
                        </DockPanel>

                        <DockPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,30,20"
                            HorizontalAlignment="Stretch">
                            <Label Content="Место измерения" />
                            <TextBox MinWidth="180" />
                        </DockPanel>


                        <Button
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Width="100"
                            Height="40"
                            HorizontalAlignment="Center" />

                        <ListView
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="0,20,0,10" />


                    </Grid>
                </Expander>



            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
